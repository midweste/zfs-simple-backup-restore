# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  # Use a lightweight Ubuntu base box
  config.vm.box = "ubuntu/jammy64"

  # Sync the project root into the VM at /vagrant (default)
  # The Vagrantfile lives in tests/, but Vagrant will set the synced folder
  # to the parent directory that contains this Vagrantfile.
  config.vm.synced_folder "..", "/vagrant", type: "virtualbox"

  # Provisioning: Python for tests and ZFS for destructive tests
  config.vm.provision "shell", inline: <<-SHELL
    set -euo pipefail
    set -x
    export DEBIAN_FRONTEND=noninteractive
    export NEEDRESTART_MODE=a
    sudo apt-get update -y
    # Python & helpers
    sudo apt-get install -y -q python3 python3-venv python3-pip pv pigz
    # Install coverage for test coverage analysis
    sudo python3 -m pip install coverage
    # Prefer prebuilt kernel modules to avoid DKMS hangs
    sudo apt-get install -y -q linux-modules-extra-$(uname -r) zfsutils-linux
    # Load ZFS module
    sudo modprobe zfs || true
  SHELL

  # A bit more RAM/CPU helps run faster; adjust as needed
  config.vm.provider "virtualbox" do |vb|
    vb.memory = 8192
    vb.cpus = 4
  end
end
