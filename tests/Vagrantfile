# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  # Use a lightweight Ubuntu base box
  config.vm.box = "ubuntu/jammy64"

  # Sync the project root into the VM at /vagrant (default)
  # The Vagrantfile lives in tests/, but Vagrant will set the synced folder
  # to the parent directory that contains this Vagrantfile.
  config.vm.synced_folder "..", "/vagrant", type: "virtualbox"

  # Provisioning: Python for tests and ZFS for destructive tests
  config.vm.provision "shell", inline: <<-SHELL
    set -euo pipefail
    sudo apt-get update -y
    sudo apt-get install -y python3 python3-venv python3-pip pv pigz
    # Install ZFS userland and DKMS (builds kernel module if not present)
    sudo apt-get install -y linux-headers-$(uname -r) zfs-dkms zfsutils-linux || true
    # Try to load ZFS module (may require reboot if DKMS just built it)
    sudo modprobe zfs || true
  SHELL

  # A bit more RAM/CPU helps run faster; adjust as needed
  config.vm.provider "virtualbox" do |vb|
    vb.memory = 1024
    vb.cpus = 2
  end
end
